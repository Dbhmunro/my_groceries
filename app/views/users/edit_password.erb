<%# viewable only to the user self %>

<div class="container">
  <header></header>
  <div class="col-md-8 col-md-offset-2">
    <h2>Change Your Password</h2>

    <div class="content">
      <p><%= @message %></p>
      <form action=<%= "/users/#{session[:user_id]}/edit_password" %> method="POST">
      <input type="hidden" name="_method" value="PATCH">
        <p>
        <label for="password">Current Password:</label>
        <input type="password" name="password"><br>
        <br>
        <label for="password">New Password:</label>
        <input type="password" name="password_new_1"><br>
        <br>
        <label for="password">Confirm New Password:</label>
        <input type="password" name="password_new_2"><%= @message2 %><br>
        <br>
        <input type="submit" value="Change Password">
        </p>
      </form>
      <br>
      <br>
      <p><a href=<%= "/users/#{session[:user_id]}" %>><button><- Back</button></a></p>

    </div>


  </div>
</div>