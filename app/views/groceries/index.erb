
<div class="container">
  <header></header>
  <div class="col-md-8 col-md-offset-2">
    <h2><%= @user.username %></h2>

    <div class="content">
      <h3><%= @list.name %> Shopping List <a href=<%= "/lists/#{session[:user_id]}/index" %>><button>All Shopping Lists</button></a></h3>
      <br>
      <ul>
        <% @list.groceries.each do |item| %>
            <li><%= item.name %>  (<%= item.quantity %>) <a href=<%= "/lists/#{session[:user_id]}/#{@list.id}/#{item.id}/edit" %>><button>Edit Item</button></a><a href=<%= "/lists/#{session[:user_id]}/#{@list.id}/#{item.id}/delete" %>><button>Delete Item</button></a></li>
        <% end %>
      <form action=<%= "/lists/#{@user.id}/#{@list.id}" %> method="post">
        <li><input type="string" name="new_item_name">
        <label for="new_item_quantity">Quantity:</label>
        <input type="number" name="new_item_quantity" min="1" value="1" size=5>
        <%# <select name="item_category">
        </select> %>
        <input type="submit" value="New Item"><%= @error%></li>
      </form>
      </ul>
      <br>
      <br>
      <br>
      <br>
    </div>


  </div>
</div>

